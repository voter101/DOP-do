<script type="x-handlebars-template" id="Tasks">
    <div class="tasks">
    </div>
</script>

<script type="x-handlebars-template" id="TasksListTemplate">
    <ul class="tasksList list-group">
    </ul>
</script>

<script type="x-handlebars-template" id="TaskListTemplate">
    <li data-taskId="{{id}}" class="task list-group-item">
        <span class="taskId">#{{id}}</span>
        <span class="taskDescription">{{content}}</span>
        <span data-taskId="{{id}}" class="badge removeTask">Remove</span>
    </li>
</script>

<script type="x-handlebars-template" id="TaskForm">
    <form action="#" class="taskForm input-group">
       <input class="form-control" type="text" name="content" />
       <span class="input-group-btn">
            <button class="btn btn-default" type="button">Send</button>
       </span>
    </form>
</script>

<script type="x-handlebars-template" id="TaskPick">
    <div class="taskPick">
    </div>
</script>

<script type="x-handlebars-template" id="TaskPicked">
    <div data-taskId="{{id}}" class="task list-group-item">
        <span class="taskId">#{{id}}</span>
        <span class="taskDescription">{{content}}</span>
        <span class="badge taskDone">Done</span>
    </div>
</script>

<script type="x-handlebars-template" id="TaskPicker">
    <div class="task list-group-item">
        <span class="taskDescription">Pick a task</span>
        <span class="badge pickTask">For the win!</span>
    </div>
</script>
